---
import Head from '../components/Head.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Scripts from '../components/Scripts.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="fr">
	<Head title={title} />
  <body>
		<Header />
    <slot />
		<Footer />
    <Scripts />
  </body>
</html>
